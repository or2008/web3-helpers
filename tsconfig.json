{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6"],
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop":true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*",
        "./src/**/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}